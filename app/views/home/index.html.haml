      .face.face1
        %figure.contents
          =image_tag "spotcode.png",height: "150", alt: "同期通信 サイト"
          %figcaption
            %h3 spotcode
      .face.face2
        .contents
          %p RailsとReactでスポティファイのコピーサイト。
    .card
      .face.face1
        %figure.contents
          =image_tag "mercari.png",height: "150", alt: "ECサイト"
          %figcaption
